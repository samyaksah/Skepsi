<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <RadioGroup
        android:id="@+id/serifSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/darkSansRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_option1" />

        <RadioButton
            android:id="@+id/vanillaSerifRadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/font_option2" />

        <RadioButton
            android:id="@+id/vanillaSansradioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg_dark_unselect"
            android:text="Dark Serif"
            tools:layout_editor_absoluteX="112dp"
            tools:layout_editor_absoluteY="311dp" />

        <RadioButton
            android:id="@+id/darkSerifradioButton4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark Serif" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>