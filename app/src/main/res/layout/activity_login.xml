<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="36dp"
        android:text="Sign In"
        android:textSize="56sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/usernameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/un"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/retrUsername"
        app:layout_constraintStart_toStartOf="@+id/retrUsername" />

    <EditText
        android:id="@+id/retrUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/button_bg_dark_unselect"
        android:drawableTint="@color/colorPrimary"
        android:ems="8"
        android:inputType="textPersonName"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@drawable/button_bg_dark_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titleTextView"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <EditText
        android:id="@+id/retrPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/button_bg_dark_unselect"
        android:drawableTint="@color/colorPrimary"
        android:ems="8"
        android:hint="@string/prompt_password"
        android:inputType="textPassword"
        android:textColor="@color/colorPrimary"
        android:textCursorDrawable="@drawable/button_bg_dark_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/retrUsername"
        app:layout_constraintTop_toBottomOf="@+id/retrUsername" />

    <TextView
        android:id="@+id/passwordTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pw"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/retrPassword"
        app:layout_constraintStart_toStartOf="@+id/retrPassword" />

    <Button
        android:id="@+id/retrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:background="@drawable/button_bg_dark_unselect"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/retrPassword" />
    
</androidx.constraintlayout.widget.ConstraintLayout>

