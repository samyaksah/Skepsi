<resources>


    <!-- Base application theme. -->
    <!--    <style name="AppTheme" parent="android:Theme.Holo.">-->
    <!--        &lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--    </style>-->

    <style name="standard" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">30sp</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>

    <style name="sans" parent="standard">
        <item name="fontFamily">@font/ibm_plex_sans</item>
        <item name="android:fontFamily">@font/ibm_plex_serif</item>

    </style>

    <style name="serif" parent="standard">
        <item name="fontFamily">@font/ibm_plex_serif</item>
        <item name="android:fontFamily">@font/ibm_plex_serif</item>
        <!--        <item name="android:fontWeight"-->
    </style>

    <style name="vanillaSans" parent="sans">
        <item name="colorPrimary">@color/standardWhite</item>
        <item name="colorPrimaryDark">@color/standardWhite</item>
        <item name="colorAccent">@color/standardWhite</item>
        <item name="android:textColor">@color/standardBlack</item>
        <item name="android:background">@color/standardBlack</item>

        <!--        <item name="fon"-->
    </style>

    <style name="darkSans" parent="sans">
        <item name="colorPrimary">@color/standardBlack</item>
        <item name="colorPrimaryDark">@color/standardBlack</item>
        <item name="colorAccent">@color/standardBlack</item>
        <item name="android:textColor">@color/standardWhite</item>
        <item name="android:background">@color/standardBlack</item>


    </style>

    <style name="vanillaSerif" parent="serif">
        <item name="colorPrimary">@color/standardWhite</item>
        <item name="colorPrimaryDark">@color/standardWhite</item>
        <item name="colorAccent">@color/standardWhite</item>
        <item name="android:textColor">@color/standardBlack</item>
        <item name="android:background">@color/standardBlack</item>

    </style>

    <style name="darkSerif" parent="serif">
        <item name="colorPrimary">@color/standardBlack</item>
        <item name="colorPrimaryDark">@color/standardBlack</item>
        <item name="colorAccent">@color/standardBlack</item>
        <item name="android:textColor">@color/standardWhite</item>
        <item name="android:background">color</item>

    </style>

    <style name="activityTitle" parent="Widget.AppCompat.TextView">

    </style>


    <style name="customRadio" parent="Widget.AppCompat.CompoundButton.RadioButton">

    </style>

    <style name="customButton" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_bg</item>
    </style>

</resources>
